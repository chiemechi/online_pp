<div class='carddetailPage'>
  <div class="container">
    <div class="cardContents">
      <div class="cardContents_title">
    <% @records.each do |record| %>

        <div>タイトル</div>
        <h2><%= record.title %></h2>
      </div>
      <div class="cardContents_memo">
        <div>メモ</div>
        <div><%= record.memo %></div>
      </div>
    
      <div class="cardContents_listStatus">
        <div>画像</div>
          <%= image_tag record.image, class: 'message-image' if record.image.attached? %>
      <%end%>
          
      </div>
