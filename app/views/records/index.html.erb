<div class="Form">
   <h6>議事録</h6>
        
    <% @records.each do |record| %>
        <div class="header_action">
            <%= link_to content_tag(:i, '', class: 'fas fa-trash'), record, method: :delete %>
            <%= link_to(content_tag(:i, '', class: 'fas fa-pen'), edit_record_path(record)) %>
          </div>
        <div class="records">
        <div class="record_pic"> 
        <%= image_tag record.image.variant(resize: '700x900'), class: 'message-image' if record.image.attached? %>
        </div>
        <div class="Form-Item">
          <p class="Form-Item-Label">■議題
          </p>
          <%= record.title %>
        </div>
        <div class="Form-Item">
          <p class="Form-Item-Label">■会議日</p>
          <div><%= record.record_day %></div>

        </div>
        <div class="Form-Item">
          <p class="Form-Item-Label isMsg">■■メモ</p>
          <div><%= record.memo %></div>
        </div>
        </div> 
        <hr class="cp_hr04" />
   <%end%> 

</div>