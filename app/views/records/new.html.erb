 </header>
<div class="cardnewPgae">
  <div class='container'>
    <%= form_with model: @record, url: { action: :create }, html: { class: 'cardnewForm' }, local: true do |f| %>
      
      <div class="cardnewForm_title">
        <%= f.label :title %>
        <span class="indispensable">必須</span>
        <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "カード名" %>
      </div>
      <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">会議の日程</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :record_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2000,
               
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>

      <div class="cardnewForm_memo">
        <%= f.label :memo %>
         <span class="indispensable">必須</span>
        <%= f.text_area :memo, autofocus: true, class: "form-control", placeholder: "詳細" %>
        </div>
       
      <div class="img-upload">
          <div class="weight-bold-text">
            添付資料
          </div>
          <div class="click-upload">
            <%= f.file_field :image, id:"item-image" %>
          </div>
          <div class="image-list" id="image-list">
          </div>
           


        </div>


      <div class="text-center"><%= f.submit "作成する", class: "submitBtn" %></div>
      </div>
      

    <% end %>
  </div>
</div>
